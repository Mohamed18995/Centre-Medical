{% extends 'base.html.twig' %}

{% block title %}Choisir un Médecin{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg">
                    <div class="card-header bg-primary text-white text-center">
                        <h3>Choisissez un Médecin Généraliste</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_row(form.medecin, {'attr': {'class': 'form-select'}}) }}
                            </div>
                            <div class="text-center">
                                {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
