{% extends 'base.html.twig' %}

{% block title %}Contact - Maison Médicale Santé Ensemble{% endblock %}

{% block body %}
<div class="container mt-5">
    <!-- Titre avec classe modifiée -->
    <h1 class="form-title text-center mb-4">Contactez-nous</h1>

    <div class="row">
        <!-- Formulaire de contact -->
        <div class="col-md-6">
            <form>
                <div class="mb-3">
                    <label for="name" class="form-label">Nom</label>
                    <input type="text" class="form-control" id="name" placeholder="Votre nom" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Votre email" required>
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Message</label>
                    <textarea class="form-control" id="message" rows="4" placeholder="Votre message" required></textarea>
                </div>
                <!-- Bouton sans bordure avec la classe modifiée -->
                <button type="submit" class="btn btn-custom">Envoyer</button>
            </form>
        </div>

        <!-- Informations de contact -->
        <div class="col-md-6">
            <h3>Nos coordonnées</h3>
            <p><strong>Adresse :</strong> Rue des rivageois 7, 4000 Liège</p>
            <p><strong>Téléphone :</strong> +32 489 47 08 53</p>
            <p><strong>Email :</strong> contact@centre-medical.com</p>

            <!-- Carte Google Maps -->
            <div class="ratio ratio-16x9 mt-3">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d5062.395648280132!2d5.572653612101251!3d50.623441774774726!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c0f9fc23532477%3A0x89c83abd517a0464!2sRue%20des%20Rivageois%207%2C%204000%20Li%C3%A8ge!5e0!3m2!1sfr!2sbe!4v1743101340276!5m2!1sfr!2sbe" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </div>
</div>
{% endblock %}
