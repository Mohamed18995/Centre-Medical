{% extends 'base.html.twig' %}

{% block title %}Accueil - Centre Médical{% endblock %}

{% block body %}
    <!-- Section Héro -->
    <header class="hero-section">
        <div class="container">
            <h1 class="display-4 fw-bold">Bienvenue sur notre Centre Médical</h1>
            <p class="lead">Prenez rendez-vous en ligne avec nos spécialistes en quelques clics.</p>
            <a href="{{ path('rendez_vous_step_1') }}" class="btn btn-light btn-lg mt-3">Prendre un rendez-vous</a>
        </div>
    </header>

    <!-- Section des médecins disponibles -->
    <section class="container mt-5">
        <h2>Nos médecins disponibles</h2>
        <div class="row justify-content-center">
            {% for medecin in medecins %}
                <div class="col-md-4 mb-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">{{ medecin.nom }} {{ medecin.prenom }}</h5>
                            <p class="card-text text-muted">Médecin généraliste</p>
                            <a href="#" class="btn btn-outline-primary mt-2">Voir Profil</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p class="text-center text-danger">Aucun médecin disponible pour l'instant.</p>
                </div>
            {% endfor %}
        </div>
    </section>
    <!-- Carte Google Maps -->
    <div class="ratio ratio-16x9 mt-3">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d5062.395648280132!2d5.572653612101251!3d50.623441774774726!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c0f9fc23532477%3A0x89c83abd517a0464!2sRue%20des%20Rivageois%207%2C%204000%20Li%C3%A8ge!5e0!3m2!1sfr!2sbe!4v1743101340276!5m2!1sfr!2sbe" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade" 
            width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy">
        </iframe>
    </div>
{% endblock %}
