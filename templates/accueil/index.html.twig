{% extends 'base.html.twig' %}

{% block title %}Accueil - Maison Médicale Santé Ensemble{% endblock %}

{% block body %}
    <!-- Section Héro -->
    <header class="hero-section">
        <div class="container">
            <h1 class="display-4 fw-bold">Bienvenue sur notre Maison Médicale Santé Ensemble</h1>
            <p class="lead">Prenez rendez-vous en ligne avec nos spécialistes en quelques clics.</p>
            <a href="{{ path('rendez_vous_step_1') }}" class="btn btn-light btn-lg mt-3">Prendre un rendez-vous</a>
        </div>
    </header>

    <!-- Section des médecins disponibles -->
    <section class="container mt-5">
        <h2>Nos médecins disponibles</h2>
        <div class="row justify-content-center">
            {% for medecin in medecins %}
                <div class="col-md-4 mb-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">{{ medecin.nom }} {{ medecin.prenom }}</h5>
                            <p class="card-text text-muted">Médecin généraliste</p>
                            <a href="#" class="btn btn-outline-primary mt-2">Voir Profil</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p class="text-center text-danger">Aucun médecin disponible pour l'instant.</p>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
